<h1><%=@post.title%></h1>
<h2><%=@post.content%></h2>
<%@post.comments.each do |comment|%>
  <li><%=comment.content%>
      <%end%>

    <%= form_for @comment do |f| %>
    <%= f.text_field :content %>
    <%= f.collection_select :user_id, User.all, :id, :username, include_blank: "Create New"%>
  
    <%= f.submit %>
  <% end %>
